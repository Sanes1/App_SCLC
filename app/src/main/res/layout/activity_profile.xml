<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundcolor"
    android:fitsSystemWindows="true"
    tools:context=".Profile">

    <!-- NavigationView as a Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_profiles"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        android:background="@color/maroon"
        android:textColor="@color/white"/>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarAccount"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/grey"
                android:theme="?attr/actionBarTheme"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:navigationIcon="@drawable/hamburger"
                app:title=" ">

                <!-- Centered TextView inside Toolbar -->
                <TextView
                    android:id="@+id/head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SCLC INFORMATION SYSTEM"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_gravity="center"/>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="149dp"
                android:layout_height="180dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/username_email"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarAccount">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_marginLeft="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RadioButton" />

                <RadioButton
                    android:id="@+id/radioButton3"
                    android:layout_width="189dp"
                    android:layout_height="67dp"
                    android:text="RadioButton" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="149dp"
                android:layout_height="180dp"
                android:layout_marginTop="24dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toEndOf="@id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@id/toolbarAccount"
                android:background="@drawable/username_email"/>

            <LinearLayout
                android:id="@+id/linearLayoutStudentData"
                android:layout_width="358dp"
                android:layout_height="500dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/username_email"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbarAccount">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student's Data"
                    android:layout_marginLeft="8dp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Name"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's Name"/>

                <TextView
                    android:id="@+id/section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Section and Year Level"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/textSection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's section and year level"/>

                <TextView
                    android:id="@+id/birthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Birthdate"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/textBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's birthdate"/>

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Address"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/textAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's address"/>

                <TextView
                    android:id="@+id/nationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Nationality"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/textNationality"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's Nationality"/>

                <TextView
                    android:id="@+id/contactnum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Contact Number"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/textContact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="5dp"
                    android:hint="Student's Contact Number"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutParentData"
                android:layout_width="358dp"
                android:layout_height="500dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/username_email"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutStudentData">

                <TextView
                    android:id="@+id/textViewParent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Parent's Data"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/parentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Parent's Name"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:hint="Parent's Name"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/parentSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Section and Year Level"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentSection"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Parent's Section and Year Level" />

                <TextView
                    android:id="@+id/parentBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Birthdate"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Parent's Birthdate" />

                <TextView
                    android:id="@+id/parentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Address"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Parent's Address"/>

                <TextView
                    android:id="@+id/parentNationality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Nationality"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentNationality"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:hint="Parent's Nationality"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/parentContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Contact Number"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextParentContact"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Parent's Contact Number"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutEmergencyContact"
                android:layout_width="358dp"
                android:layout_height="380dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/username_email"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayoutParentData">

                <TextView
                    android:id="@+id/textEmergencyContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Emergency Contact"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/emergencyContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Name"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextEmergName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:hint="Name"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:id="@+id/EmergencyRelationship"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Relationship"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextEmergencyRelationship"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Relationship" />

                <TextView
                    android:id="@+id/EmergencyContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Contact Number"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextEmergencyContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Contact Number" />

                <TextView
                    android:id="@+id/EmergencyHomeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Home Address"
                    android:layout_marginLeft="8dp"/>

                <EditText
                    android:id="@+id/editTextEmergencyHomeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/text_field"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:hint="Home Address" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>


